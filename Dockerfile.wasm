ARG SWIFT_IMAGE
FROM ${SWIFT_IMAGE}

ARG SWIFT_VERSION
# See https://github.com/swiftwasm/swift/releases
ENV TAG=$SWIFT_VERSION-SNAPSHOT-2024-07-07-a

RUN swift experimental-sdk install https://github.com/swiftwasm/swift/releases/download/swift-wasm-${TAG}/swift-wasm-${TAG}-wasm32-unknown-wasi.artifactbundle.zip
